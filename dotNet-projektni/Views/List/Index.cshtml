<h1>Test Shopping Lists</h1>
<div class="container">
    <div class="row">
        @foreach (var list in Model)  {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@list.Name</h5>
                        <p class="card-text">@list.Description </p>
                        <span>made by @list.User.Username</span>
                        <ul class="list-group list-group-flush">
                            @foreach (var item in list.ShoppingListItems)
                            {
                                <li class="list-group-item">
                                    <strong>@item.Name</strong> - @item.Quantity @item.Unit
                                    @if (item.IsPurchased)
                                    {
                                        <span class="badge badge-success">(Purchased)</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-warning">(Not Purchased)</span>
                                    }
                                </li>
                            }
                        </ul>
                        <a href="@Url.Action("DetailedList", "List", new { id = list.ShoppingListId })" class="btn btn-primary">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
            <li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">Next</a></li>
        </ul>
    </nav>
</div>